/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

.ad{
  width: 90%;
  height: auto;
  margin-left:auto;
  margin-right:auto;
  margin-bottom: 40rpx;
}

.ad ad{
  border-radius: 20rpx;
}

.header{
  padding: 60rpx;
  line-height: 1;
  /* background-color: #333333; */
  flex: 1;
  min-height: 100%;
  font-size: 32rpx;
}

.header-title{
  font-size: 52rpx;
  padding-bottom: 10rpx;
}

.header-subtitle{
  margin-top: 10rpx;
  color: #888888;
  font-size: 28rpx;
}

.share-button{
  width: 50%; 
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}


